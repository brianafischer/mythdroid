<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mythdroid"
    android:versionCode="4" android:versionName="0.4.3">
      
	<application android:icon="@drawable/logo" android:label="@string/app_name" android:name="MythDroid">
      	
      	<receiver android:name=".receivers.PhoneStateReceiver">
        	<intent-filter>
        		<action android:name="android.provider.Telephony.SMS_RECEIVED"/>
        		<action android:name="android.intent.action.PHONE_STATE" />
        		
        	</intent-filter>
        </receiver>
        
        <service android:name=".remote.WakeService"/>
        
        <activity android:name="org.acra.CrashReportDialog"
        	android:theme="@android:style/Theme.Dialog"
        	android:launchMode="singleInstance"
        	android:excludeFromRecents="true"
        	android:finishOnTaskLaunch="true"/>
      	
        <activity android:name=".activities.MythDroid" 
        	android:label="@string/app_name"
        	android:configChanges="keyboardHidden|orientation">
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
               
        <activity android:name=".activities.Recordings" 
        	android:label="Recordings"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.RecordingDetail" 
        	android:label="Program Details"
        	android:configChanges="keyboardHidden|orientation"/>
        	
         <activity android:name=".activities.RecordingEdit" 
        	android:label="Edit Schedule"
        	android:configChanges="keyboardHidden|orientation"/>
        
        <activity android:name=".activities.RecordingEditSched" 
        	android:label="Scheduling Options"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.RecordingEditGroups" 
        	android:label="Groups Options"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.Prefs" 
        	android:label="@string/app_name"/>
        	
        <activity android:name=".activities.FrontendList" 
        	android:label="Frontends"/>
        	
       	<activity android:name=".activities.Videos" 
        	android:label="Videos"
        	android:configChanges="keyboardHidden|orientation"/>
        	
       	<activity android:name=".activities.VideoDetail" 
        	android:label="Video Details"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.VideoPlayer" 
        	android:screenOrientation="landscape"
        	android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        	android:configChanges="keyboardHidden|orientation"/>
                	
        <activity android:name=".activities.Status" 
        	android:label="Status"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.StatusRecorders" 
        	android:label="Recorder Status"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.StatusScheduled" 
        	android:label="Scheduled Recordings"
        	android:configChanges="keyboardHidden|orientation"/>
        	
		<activity android:name=".activities.StatusJobs" 
        	android:label="Job Queue"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.StatusBackend" 
        	android:label="Backend Status"
        	android:configChanges="keyboardHidden|orientation"/>
        	
        <activity android:name=".activities.Guide" 
        	android:theme="@android:style/Theme.NoTitleBar"
        	android:configChanges="keyboardHidden|orientation"/>
        	        	        	
        <activity android:name=".remote.NavRemote" 
       		android:theme="@android:style/Theme.NoTitleBar"
       		android:configChanges="keyboardHidden|orientation"/>
       		
        <activity android:name=".remote.TVRemote" 
        	android:theme="@android:style/Theme.NoTitleBar"
        	android:configChanges="keyboardHidden|orientation"/>
        	
       	<activity android:name=".remote.MusicRemote" 
        	android:theme="@android:style/Theme.NoTitleBar"
        	android:configChanges="keyboardHidden|orientation"/>
        	
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
    
</manifest> 