<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="MDNoTitle" parent="android:Theme.NoTitleBar"/>
	<style name="MDFullScreen" parent="android:Theme.NoTitleBar.Fullscreen"/>
	<style name="MDButton">
	    <item name="android:scaleType">fitCenter</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@drawable/mdbuttonselector</item>
   	</style>
  	<style name="MDButtonNormal" parent="MDButton">
  	    <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
   	</style>
   	<style name="MDButtonLarge" parent="MDButton">
	    <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
   	</style>
   	<style name="NumPadButton">
   	    <item name="android:layout_width">96px</item>
        <item name="android:layout_height">76px</item>
        <item name="android:background">@drawable/btn_dial</item>
   	</style>
</resources>
