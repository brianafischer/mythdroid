<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tv_remote"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<ImageButton android:id="@+id/back"
		style="@style/MDButtonNormal"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="4dp"
		android:src="@drawable/back"/>
		
	<Button android:id="@+id/num"
		style="@style/MDButtonNormal"
		android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
		android:layout_marginBottom="20dp"
		android:gravity="center"
		android:textSize="30sp"
		android:textStyle="bold"
    	android:textColor="#ff333333"
		android:text="123"/>
	
	<ImageButton android:id="@+id/guide"
        style="@style/MDButtonNormal"
        android:layout_alignLeft="@id/num"
        android:layout_above="@id/num"
        android:src="@drawable/cal"/>
		
	<ImageButton android:id="@+id/volMute"
		style="@style/MDButtonNormal"
		android:layout_alignTop="@id/num"
		android:layout_toRightOf="@id/num"
		android:layout_marginBottom="20dp"
		android:src="@drawable/vol_mute"/>
		
	<ImageButton android:id="@+id/skip"
		style="@style/MDButtonNormal"
		android:layout_alignTop="@id/guide"
		android:layout_alignParentRight="true"
		android:src="@drawable/skip"/>
				
	<ImageButton android:id="@+id/enter"
		style="@style/MDButtonNormal"
		android:layout_alignLeft="@id/skip"
		android:layout_below="@id/skip"
		android:layout_marginBottom="20dp"
		android:src="@drawable/enter"/>
		
	<ImageButton android:id="@+id/info"
		style="@style/MDButtonNormal"
		android:layout_alignTop="@id/enter"
		android:layout_toLeftOf="@id/enter"
		android:layout_marginBottom="20dp"
		android:src="@drawable/info"/>
		
	<TextView android:id="@+id/title"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_toRightOf="@id/back"
    	android:layout_marginTop="8dp"
    	android:layout_marginLeft="4dp"
    	android:layout_marginRight="164dp"
    	android:gravity="center"
      	android:textSize="24sp"
    	android:textStyle="bold"
    	android:textColor="@color/light_grey_text"/>
    	
    <SeekBar android:id="@+id/progress"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/back"
    	android:layout_marginTop="8dp"
    	android:layout_marginLeft="8dp"
    	android:layout_marginRight="8dp"
    	android:gravity="center"
    	style="?android:attr/progressBarStyleHorizontal"/>
    	
	<ImageView android:id="@+id/gesture"
		android:layout_width="360dp"
		android:layout_height="fill_parent"
		android:layout_below="@id/progress"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="50dp"
		android:scaleType="fitCenter"
		android:layout_centerHorizontal="true"
		android:src="@drawable/mdtv"/>
		
</RelativeLayout>