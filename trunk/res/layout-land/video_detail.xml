<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent"
   	android:paddingLeft="6dp"
   	android:paddingRight="6dp">
   	
   	 <TextView
		android:id="@+id/videoDTitle"
 		android:layout_width="fill_parent" 
 		android:layout_height="wrap_content"
 		android:layout_alignParentTop="true"
 		android:layout_alignParentLeft="true"
 		android:paddingTop="10dp"
 		android:textStyle="bold"
 		android:textSize="20sp"/>
 		
 	<TextView
		android:id="@+id/videoDSubtitle"
 		android:layout_width="fill_parent" 
 		android:layout_height="wrap_content"
 		android:layout_below="@id/videoDTitle"
 		android:layout_marginTop="3dp"
 		android:textSize="17sp"
 		android:textStyle="italic"/>
   	
   	<ImageView
		android:id="@+id/videoDPoster"
		android:layout_width="80dp" 
 		android:layout_height="110dp"
 		android:layout_below="@id/videoDSubtitle"
		android:layout_alignParentLeft="true"
		android:scaleType="fitCenter"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="8dp"/>
 		
	<TextView	
		android:id="@+id/videoDRating"
		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
		android:layout_alignTop="@id/videoDPoster"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="12dp"
 		android:layout_toRightOf="@id/videoDPoster"
 		android:textSize="16sp"/>
		
	<TextView	
		android:id="@+id/videoDYear"
		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
		android:layout_below="@id/videoDRating"
 		android:layout_alignLeft="@id/videoDRating"
 		android:paddingTop="7dp"
 		android:textSize="16sp"/>
 		
	<TextView	
		android:id="@+id/videoDLength"
		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
		android:layout_below="@id/videoDYear"
 		android:layout_alignLeft="@id/videoDYear"
 		android:paddingTop="7dp"
		android:textSize="16sp"/>
		
	<TextView	
		android:id="@+id/videoDDirector"
		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
 		android:layout_below="@id/videoDPoster"
 		android:layout_alignParentLeft="true"
 		android:layout_toLeftOf="@id/videoDPlotTitle"
 		android:layout_marginTop="12dp"
 		android:textSize="16sp"/>
 		
 	<TextView	
 		android:id="@+id/videoDPlotTitle"
		android:layout_width="wrap_content" 
 		android:layout_height="wrap_content"
 		android:layout_below="@id/videoDSubtitle"
 		android:layout_toRightOf="@id/videoDLength"
 		android:layout_marginTop="6dp"
 		android:layout_marginLeft="20dp"
 		android:text="Plot:"
 		android:textSize="16sp"/>
		
	<LinearLayout
		android:id="@+id/videoDButtons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:paddingBottom="2dp"
		android:orientation="horizontal">
		
		<Button
 			android:id="@+id/videoDPlay"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:layout_marginRight="16dp"
 			android:minWidth="84dp"
  			android:text="Play"/>
  			
		<Button
 			android:id="@+id/videoDTVDB"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:minWidth="84dp"
 			android:layout_marginLeft="16dp"
 			android:text="TVDB"/>
 			
 	</LinearLayout>
 	
 	<ScrollView 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/videoDPlotTitle"
		android:layout_above="@id/videoDButtons"
		android:layout_alignLeft="@id/videoDPlotTitle"
		android:layout_alignWithParentIfMissing="true"
		android:paddingTop="6dp"
		android:paddingBottom="8dp"
		android:clipChildren="true">
		
		<TextView
			android:id="@+id/videoDPlot"
			android:layout_width="wrap_content" 
 			android:layout_height="wrap_content"
 			android:paddingRight="4dp"
			android:textSize="16sp"/>
			
	</ScrollView>
			
</RelativeLayout>